@model AppcontableCompueasys2._2.Models.Data.Factura

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal total = 0;
}





<div class="contenedor pt-4">

    <table style="width:100%">
        <tr>
            <td>
                <img src="" style="width: 120px;height:120px" />
            </td>
            <td style="text-align:right">
                <table style="margin-right:0;margin-left:auto">
                    <tr><td><p class="title2">Numero de Factura # 00000 @Html.DisplayFor(model => model.NumeroFactura)</p></td></tr>
                    
                </table>
            </td>
        </tr>
    </table>
    <br />
    <table style="width:100%">
        <tr>
            <td>
                <table>
                    <tr>
                        <td>
                            <p class="title"> @Html.DisplayFor(model => model.IdEmpresaNavigation.NombreEmpresa)</p>
                        </td>
                    </tr>
                    <tr>
                        <td><p class="text">Direccion: @Html.DisplayFor(model => model.IdEmpresaNavigation.DireecionEm) </p></td>
                    </tr>
                    <tr>
                        <td>
                            <p class="text">Correo: @Html.DisplayFor(model => model.IdEmpresaNavigation.TelefonoOCelular)</p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p class="text">Correo: @Html.DisplayFor(model => model.IdEmpresaNavigation.Email)</p>
                        </td>
                    </tr>
                </table>
            </td>
            <td style="text-align:right">
                <table style="margin-right:0;margin-left:auto">
                    <tr>
                        <td><p class="title">CLIENTE</p></td>
                    </tr>
                    <tr>
                        <td><p class="text"> @Html.DisplayFor(model => model.IdClienteNavigation.Nombre)</p></td>
                    </tr>
                    <tr>
                        <td><p class="text">Cedula:  @Html.DisplayFor(model => model.IdClienteNavigation.Cedula)</p></td>
                    </tr>
                    <tr>
                        <td><p class="text">Cedula:  @Html.DisplayFor(model => model.IdClienteNavigation.Celular)</p></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
   
    <table class="tbproductos" style="width:100%">
        <thead>
            <tr>
                <th class="tbth" style="width:530px">Producto</th>
                <th class="tbth" style="width:130px">Cantidad</th>
                <th class="tbth" style="width:130px">Precio</th>
                <th class="tbth" style="width:130px">Total</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (ViewBag.detalleCompra != null)
                {
                    
             
                foreach (var item in ViewBag.detalleCompra)
                {
                    <tr>
                            
                        <td class="td-item"><p class="item">@item.Nombre</p></td>
                            <td class="td-item"><p class="item">@item.Cantidad</p></td>
                        <td class="td-item"><p class="item">@item.Precio</p></td>
                        <td class="td-item"><p class="item">@item.Total</p></td>
                        
                        </tr>
                        total = Convert.ToDecimal(item.Total) + total;
                    }
                }
            }
            <tr>
                <td colspan="2" rowspan="4">
                </td>
                <td class="td-item">
                    <p class="item-2">Sub Total</p>
                </td>
                <td class="item-3">
                    <p>@total</p>
                </td>
            </tr>
            <tr>
                <td class="td-item">
                    <p class="item-2">IGV</p>
                </td>
                <td class="item-3">
                    <p> @Html.DisplayFor(model => model.Iva)</p>
                </td>
            </tr>> 
            <tr>
                <td class="td-item">
                    <p class="item-2">Descuento</p>
                </td>
                <td class="item-3">
                    <p> @Html.DisplayFor(model => model.Descuento)</p>
                </td>
            </tr>>
            <tr>
                <td class="item-2">
                  <p>Total</p>
                </td>
                <td class="item-3">
                    <p> @total</p>
                </td>
            </tr>
            <tr>
                <td class="item-3">
                    <p>Observaciones</p>
                    <p> @Html.DisplayFor(model => model.Observaciones)</p>
                </td>
               
            </tr>
        </tbody>
    </table>
    <br />
    <br />
       <br />
          <br />
             <br />


</div>
<br />
<br />
<br />
<br />
