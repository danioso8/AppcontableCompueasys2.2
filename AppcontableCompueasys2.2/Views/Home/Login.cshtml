@model AppcontableCompueasys2._2.Models.Data.Usuario
@{
    Layout = null;
}
<!DOCTYPE html>
<head>
    <link href="~/css/stylelogint.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    
</head>
<body>
    
      <div class="container">

        <div class="login-wrap  ">


            <div class="login-html">
                <h1>CompuEasys</h1>
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Iniciar sesion</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" id="tab-2" class="tab">Registrese</label>
                <div class="login-form">

                    <form method="post" asp-action="Login" asp-controller="Home">


                        <div class="sign-in-htm">
                            <div class="group">
                                <label fsp-validation-for="Correo" class="label">Correo Electronico</label>
                                <input asp-for="Correo" name="Correo" type="text"  class="input">
                                
                            </div>
                            <div class="group">
                                <label asp-validation-for="Contraseña" class="label">Contraseña</label>
                                <input asp-for="Contrasena" name="Contraseña" type="password" class="input" data-type="password">
                                
                            </div>
                            <div class="group">
                                <input id="check" type="checkbox" class="check" checked>
                                <label for="check"><span class="icon"></span> Mantenerme conectado</label>
                            </div>
                            <div class="group">
                                <button class="button">Iniciar</button>
                            </div>
                            <div >
                                <h4 class="text-center">
                                    @ViewBag.User
                                </h4>
                            </div>
                            <div class="hr"></div>
                            <div class="foot-lnk">
                                <a href="#forgot" class="Rpass">Recuperar contraseña?</a>
                            </div>

                        </div>


                    </form>



                    <!-- Registro de usuaerios -->



                    <form asp-action="Create" asp-controller="Usuarios" method="post">

                        <div class="sign-up-htm">
                            <div class="group">
                                <label asp-for="NombreEmpresa" class="label">Rason social [Empresa]</label>
                                <input asp-for="NombreEmpresa" type="text" class="input">
                                <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
                            </div>
                            <div class="group">
                                <label asp-for="Nombres" class="label">Nombre</label>
                                <input asp-for="Nombres" type="text" class="input">
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>
                            <div class="group">
                                <label asp-for="Apellidos" class="label">Apellidos</label>
                                <input asp-for="Apellidos" type="text" class="input">
                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                            </div>
                            <div class="group">
                                <label asp-for="Correo" class="label">correo electronico</label>
                                <input asp-for="Correo" type="text" class="input">
                                
                            </div>

                            <div class="d-xl-none">
                                <label asp-for="EsAdministrador" class="admin">Administrador</label>
                                <input asp-for="EsAdministrador" class="admin" type="text" placeholder="True">

                            </div>

                            <div class="d-xl-none">
                                <label asp-for="Activo" class="label" class="activo">Activo</label>
                                <input asp-for="Activo" type="text" class="activo  placeholder="SI">

                            </div>
                            <div class="group">
                                <label asp-for="Correo" class="label">correo electronico</label>
                                <input asp-for="Correo" type="text" class="input">

                            </div>
                            <div class="group">
                                <label asp-for="Contrasena" class="label">contraseña</label>
                                <input asp-for="Contrasena" type="password" id="pass" class="input" data-type="password">
                                <span asp-validation-for="Contrasena" class="text-danger"></span>
                            </div>
                            <div class="group">
                                <label class="label">Repita la contraseña</label>
                                <input type="password" class="input" id="repyPass" data-type="password">
                                
                             </div>
                            <div class="group">
                                <input type="submit" class="button" value="registrase">
                            </div>
                            <div class="hr"></div>
                            


                        </div>
                    </form>
                </div>
            </div>


        </div>

        <div class="grid">


            <!-- <div class="container">
               <img src="../assets/Imagenes/CompuEasys.png" width=""  alt="">
            </div> -->
        </div>
    </div>
</body>














