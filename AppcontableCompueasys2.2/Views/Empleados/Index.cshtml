@model IEnumerable<AppcontableCompueasys2._2.Models.Data.Empleado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pt-4">
   

    
   <div class="container-fluid px-4 pt-5">

       <div class="card mb-4">
           <div class="card-header">

                <div class="card-header py-3 bg-second-primary">
                    <h6 class="m-0 font-weight-bold text-white"> <i class="fas fa-table me-1"></i> Tabla de Empleados</h6>
                </div>
           </div>
           <div class=" card-body">
               
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cedula)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Direccion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Activo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdCiudadNavigation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdDepartamentoNavigation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdEmpresaNavigation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdPaisNavigation)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cedula)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Direccion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Activo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdCiudadNavigation.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdDepartamentoNavigation.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdEmpresaNavigation.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdPaisNavigation.Id)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
               

           </div>
       </div>

   </div>


</div>

<p>
    <a class="btn btn-danger" asp-action="Create">Create New</a>
</p>